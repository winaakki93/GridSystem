<script>
    $(document).ready(function () {
        LoadProducts();

    })

    function LoadProducts() {
        $.get('@Url.Action("GetProducts","Product")', function (result) {

             console.log(result)
            $("#tbl_products").DataTable({
                data: result,
                columns: [{
                    "data": "id"
                },
                { "data": "title" },
                { "data": "quantity" },
                { "data": "price" },
                { "data": "sales" },
                { "data": "cat" },
                { "data": "subCat" }
                ]
            })
        })
    }

</script>








